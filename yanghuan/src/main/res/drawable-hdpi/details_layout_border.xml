<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<!--#faf8f8-->
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#b3b8be"/>
        </shape>
    </item>
    <!-- 主体背景颜色值  在item中的top与bottom各指定了1dp的边框线-->
    <item android:top="0.5dp" android:bottom="0.5dp" android:left="0dp" android:right="0dp">
        <shape>
            <!--中间背景填充色-->
            <solid android:color="#faf8f8"/>
        </shape>
        //可以加padding属性，是该组件内容距该组件边框的填充区域
        <!--
                <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        -->
    </item>
</layer-list>