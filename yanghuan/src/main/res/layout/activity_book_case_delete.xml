<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/blackhui"
              android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/case_delete_r1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textDown">

        <ImageView
            android:id="@+id/case_delete_recback"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/case_delete_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:text="书架管理"
            android:textSize="25sp"
            android:textStyle="bold"/>

    </RelativeLayout>


    <ListView
        android:id="@+id/case_delete_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none"/>

    <RelativeLayout
        android:id="@+id/case_delete_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="bottom"
        >

        <ImageView
            android:id="@+id/case_delete_bottom_image1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/book_ic_quanxuan"
            />

        <Button
            android:id="@+id/case_delete_bottom_btn1"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/case_delete_bottom_image1"
            android:background="@null"
            android:text="全选"
            android:textColor="@color/textDown"
            android:textSize="15sp"

            />

        <Button
            android:id="@+id/case_delete_bottom_btn2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@null"
            android:text="删除"
            android:textColor="@color/textDown"
            android:textSize="15sp"

            />
        <ImageView
            android:id="@+id/case_delete_bottom_image2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/case_delete_bottom_btn2"
            android:src="@drawable/book_ic_delete"
            />

    </RelativeLayout>
</LinearLayout>