<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="firstname"
        android:id="@+id/secondname1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  回复  "
        android:id="@+id/huifu"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/secondname1"
        android:layout_toEndOf="@+id/secondname1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="secondname2"
        android:id="@+id/secondname2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/huifu"
        android:layout_toEndOf="@+id/huifu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=": "
        android:id="@+id/maohao"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/secondname2"
        android:layout_toEndOf="@+id/secondname2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="secondcontext"
        android:id="@+id/secondcontext"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/maohao"
        android:layout_toEndOf="@+id/maohao" />
</RelativeLayout>