<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/case_item_imageview"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/case_item_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/case_item_imageview"
        android:text="书名"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/case_item_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/case_item_textview1"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/case_item_imageview"
        android:text="上次阅读位置"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/case_item_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/case_item_textview2"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/case_item_imageview"
        android:text="加入书架"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/case_item_image"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/case_item_textview2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/case_item_textview"
        android:src="@drawable/ic_case_history"
        />

    <TextView
        android:id="@+id/case_item_textview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/case_item_textview2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/case_item_image"
        android:text="上次浏览时间"
        android:textSize="12sp"/>
<!--android:focusable="false"降低优先级-->
    <CheckBox
        android:id="@+id/case_item_checkboc"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:visibility="invisible"
        android:focusable="false"/>

</RelativeLayout>