<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.activity.BookPaiHangActivity">
    <RelativeLayout
        android:id="@+id/book_paihang_top_relayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/textDown">

        <ImageView
            android:id="@+id/book_paihang_recback"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_back"/>

        <TextView
            android:id="@+id/book_paihang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp"
            android:text="排行榜"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/book_paihang_gengduo"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/book_saixuan"/>
        <TextView
            android:id="@+id/book_paihang_saixuan_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/book_paihang_gengduo"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
           />

    </RelativeLayout>

    <ListView
        android:id="@+id/book_paihang_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
