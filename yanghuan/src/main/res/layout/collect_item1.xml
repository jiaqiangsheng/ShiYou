<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
   <RelativeLayout
       android:id="@+id/collection_item1_relLayout"
       android:layout_width="match_parent"
       android:layout_height="120dp">
    <ImageView
        android:id="@+id/collection_item1_imageview"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/collection_item1_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/collection_item1_imageview"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="121245646312315645154456"/>
    <TextView
        android:id="@+id/collection_item1_intro"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/collection_item1_imageview"
        android:layout_below="@id/collection_item1_title"
        android:layout_marginTop="20dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="15sp"
        android:text="123"/>
    <TextView
        android:id="@+id/collection_item1_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:textSize="12sp"
        android:text="shijian"/>
   </RelativeLayout>
</LinearLayout>