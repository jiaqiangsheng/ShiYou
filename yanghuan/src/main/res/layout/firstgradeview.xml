<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/kzz"
        android:id="@+id/firsturlimage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:id="@+id/firstGradeName"
        android:layout_toRightOf="@+id/firsturlimage"
        android:layout_toEndOf="@+id/firsturlimage" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
        android:id="@+id/firstGradedata"
        android:layout_below="@id/firstGradeName"
        android:layout_toRightOf="@+id/firsturlimage"
        android:layout_toEndOf="@+id/firsturlimage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NewdsfdsfdsfddsfdsfdsfdsfdsfdsfdsfdsfsfdsfdsfdsfdsfdsfdsfdsfText"
        android:id="@+id/firstGradecontext"
        android:layout_below="@+id/firsturlimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <com.lxx.myview.MyListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondlistView"
        android:layout_below="@+id/firstGradecontext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>