<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/hhy_bangding_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/shaiXuan">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="绑定手机"
            android:textSize="20dp"/>
    </RelativeLayout>
   <TextView
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:text="请输入您的新手机号，点击获取验证码完成绑定"
       android:textSize="15sp"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="10dp"
      android:gravity="center"/>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/hhy_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中国"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+86"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
           />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/hhy_replace_editrelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/hhy_white">

        <EditText
            android:id="@+id/hhy_replace_input_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入您的手机号"/>
        <EditText
            android:id="@+id/hhy_replace_code_edit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:hint="请输入验证码"
            android:layout_below="@id/hhy_replace_input_edit"/>
        <Button
            android:id="@+id/hhy_replace_code_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hhy_replace_input_edit"
            android:layout_toRightOf="@id/hhy_replace_code_edit"
            android:text="获取验证码"/>
    </RelativeLayout>
    <Button
        android:id="@+id/hhy_replace_next_btn"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/hhy_background_gray"
        android:text="确定"
        />
</LinearLayout>