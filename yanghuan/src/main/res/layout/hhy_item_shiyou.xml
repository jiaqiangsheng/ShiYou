<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="16dp">

    <ImageView
        android:id="@+id/middle_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_uzao"/>

    <TextView
        android:id="@+id/middle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/middle_image"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/middle_image"
        android:text="陌上朝歌"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/middle_bianqian"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/middle_name"
        android:layout_below="@+id/middle_name"
        android:text="好不容易积累的100多首歌，手一残就没了"/>

    <TextView
        android:id="@+id/middle_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="0.21km"/>
</RelativeLayout>