<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
                android:background="@color/hhy_background_gray"
             tools:context="com.hhy.fragment.PingBiTaFragment">

    <RelativeLayout
        android:id="@+id/hhy_pingbi_cannot_see1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/shaiXuan">
        <ImageView
            android:id="@+id/hhy_pingbi_cannotsee_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏蔽他人看到我的动态"
            android:textSize="20dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hhy_pingbita_cannot_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/hhy_pingbi_cannot_see1"
        android:background="@color/hhy_white"
        android:layout_marginTop="20dp"
        >
        <ImageView
            android:id="@+id/hhy_pingbicannot"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/hhy_tianjia"
            android:layout_marginLeft="90dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/hhy_pingbicannot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/hhy_pingbicannot"
            android:text="添加帐号"
            android:textSize="20dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/hhy_pingbi_cannot_tishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/hhy_pingbita_cannot_relative"
        android:text="添加过后将禁止此人看你的动态"/>
    <ListView
        android:id="@+id/hhy_pingbi_cannot_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/hhy_pingbi_cannot_tishi">

    </ListView>


</RelativeLayout>
