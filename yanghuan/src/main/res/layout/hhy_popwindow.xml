<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/hhy_background_gray">

    <RelativeLayout
        android:id="@+id/hhy_pop_takephoto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/hhy_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="拍照"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hhy_pop_frompicture"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/hhy_pop_takephoto"
        android:background="@color/hhy_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="从相册选择"
            android:textSize="20sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/hhy_pop_cancle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/hhy_pop_frompicture"
        android:layout_marginTop="10dp"
        android:background="@color/hhy_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="取消"
            android:textSize="20sp"
            />
    </RelativeLayout>

</RelativeLayout>